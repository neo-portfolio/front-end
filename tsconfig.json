{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@services/*": [
        "./src/services/*"
      ],
      "@components/general/*": [
        "./src/components/general/*"
      ],
      "@components/todo/*": [
        "./src/components/todo/*"
      ],
      "@components/home/*": [
        "./src/components/home/*"
      ],
      "@components/picker": [
        "./src/components/picker/index.tsx"
      ],
      "@components/portfolio": [
        "./src/components/portfolio/index.tsx"
      ],
      "@components/stats": [
        "./src/components/stats/index.tsx"
      ],
      "@interfaces/*": [
        "./src/interfaces/*"
      ],
      "@data/*": [
        "./data/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}